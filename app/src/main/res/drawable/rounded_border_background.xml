<!-- res/drawable/rounded_border_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景颜色为白色 -->
    <solid android:color="@android:color/white" />

    <!-- 设置圆角半径 -->
    <corners android:radius="5dp" /> <!-- 你可以根据需要调整圆角半径 -->

    <!-- 设置边框颜色和宽度 -->
    <stroke
        android:width="1dp"
        android:color="#EEEEEE" />
</shape>